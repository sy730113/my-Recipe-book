     <a  href="/recipes/<%= recipe._id %>">
        <div class="category-img">
        <img src="/uploads/<%-recipe.image  %>" height="200px" width="170px" style="border-radius: 8px;">
        <p><%- recipe.name %></p>
    </div>
    </a>
    <% }) %>
    <% } %>
</div>
</section>


